{{ with $.Scratch.Get "index" }}
	{{-  jsonify . -}}
{{ else }}
	{{- $.Scratch.Add "index" slice -}}
	{{- range $index, $element := where .Site.RegularPages "Type" "eq"  "entries" -}}
		{{- $.Scratch.Add "index" (dict "id" $index "title" $element.Title "abstract" (replaceRE "\n" " " $element.Params.abstract) "topics" $element.Params.topics "topicLinks" (apply $element.Params.topics "urlize" ".") "permalink" $element.Permalink "date" (.Date.Format "January 2") "shortname" $element.File.TranslationBaseName ) -}}
	{{- end -}}
	{{- $.Scratch.Get "index" | jsonify -}}
{{ end }}